<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GaoDEMap">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/input_select">

        <ImageView
            android:id="@+id/rv_search"
            android:layout_width="27dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/search" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rv_search"
            android:background="#00FFFFFF"
            android:hint="搜索"
            android:inputType="text" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_show1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ib_target"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/target_normal"
            android:scaleType="fitCenter"
            android:src="@drawable/target" />

        <ImageButton
            android:id="@+id/ib_zhishi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/target_normal"
            android:onClick="goto_zhishi"
            android:scaleType="fitCenter"
            android:src="@drawable/zhishi" />

        <ImageView
            android:id="@+id/iv_target"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/location2"
            android:visibility="gone" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#41FF9800"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/ib_add_pos"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:drawablePadding="5dp"
                            android:onClick="goto_add"
                            android:scaleType="centerCrop"
                            android:src="@drawable/add"
                            android:visibility="gone" />
                        <RadioButton
                            android:id="@+id/rb_eye"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/eye_close"
                            android:button="@drawable/transparent" />

                        <ImageButton
                            android:id="@+id/ib_driver_sleep"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@android:color/transparent"
                            android:onClick="goto_sleep"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sleep" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center">
                        <Switch
                            android:id="@+id/ac_switch_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/city"
                            android:checked="false"
                            android:thumb="@drawable/thumb"
                            android:track="@drawable/track"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                        <TextView
                            android:id="@+id/city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="范围：我的城市"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#2C15EF05"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="10dp">

                <TextView
                    android:id="@+id/tv_cur_pos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#2C05E6EF"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_poi_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="25sp" />

                        <ImageButton
                            android:id="@+id/bt_weather"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="5dp"
                            android:onClick="goto_weather"
                            android:scaleType="centerCrop"
                            android:src="@drawable/weather" />

                        <ImageButton
                            android:id="@+id/bt_navi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:drawablePadding="5dp"
                            android:onClick="goto_navi"
                            android:scaleType="centerCrop"
                            android:src="@drawable/navi" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_poi_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_poi_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_poi_distance"
                        android:layout_marginTop="4dp"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_poi_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_poi_address"
                        android:layout_marginTop="4dp"
                        android:textSize="15sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_target_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center" />

            <ListView
                android:id="@+id/rv_show2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>